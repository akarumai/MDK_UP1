<Window x:Class="MDK_UP.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Title="UserWindow" Height="400" Width="500">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="60" />
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="28*" />
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Фамилия" Margin="8,8,8,8" />
        <TextBlock Text="Имя" Grid.Row="1" Margin="8,8,8,8" />
        <TextBlock Text="Отчество" Grid.Row="2" Margin="8,8,8,8"/>
        <TextBlock Text="Дата Рождения" Grid.Row="3" Margin="8,8,8,8" />
        <TextBlock Text="Номер телефона" Grid.Row="4" Margin="8,8,8,8" />
        <TextBlock Text="Отдел" Grid.Row="5" Margin="8,8,8,8" />

        <TextBox Text="{Binding Surname}" Grid.Column="1" Grid.ColumnSpan="3" Margin="8,8,8,8" />
        <TextBox Text="{Binding Name}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="8,8,8,8" />
        <TextBox Text="{Binding Patronymic}" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Margin="8,8,8,8" />
        <TextBox Text="{Binding Data_birth}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Margin="8,8,8,8" />
        <TextBox Text="{Binding Telephone_number}" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" Margin="8,8,8,8" />
        <TextBox Text="{Binding Department}" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" Margin="8,8,8,8" />

        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="6" Grid.Column="2" Margin="88,0,0,0" Grid.ColumnSpan="2">
            <Button IsDefault="True" Click="Accept_Click" RenderTransformOrigin="0.508,1.429" >OK</Button>
            <Button IsCancel="True" >Отмена</Button>
        </StackPanel>
    </Grid>
</Window>